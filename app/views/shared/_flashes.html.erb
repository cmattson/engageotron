<div class="row">
  <div class="large-12 columns">
  <% if flash[:notice] %>
    <div data-alert class="alert-box">
      <%= flash[:notice] %>
      <a href="#" class="close">&times;</a>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div data-alert class="alert-box info">
      <%= flash[:alert] %>
      <a href="#" class="close">&times;</a>
    </div>
  <% end %>
  </div>
</div>