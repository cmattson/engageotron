<div class="row">
  <div class="large-12 columns">
    <% if notice %>
      <div data-alert class="alert-box">
        <%= notice %>
        <a href="#" class="close">&times;</a>
      </div>
    <% end %>
  
    <h1><%= @contact.full_name %></h1>
    <h2><%= @contact.company_name %></h2>
  
    <% if @contact.member_since > Time.now %>
      <div data-alert class="alert-box info">
        This member is currently awaiting membership approval.
      </div>
    <% end %>
  
    <p>
      <%= member_category %><br>
      Member since <%= @contact.member_since.strftime('%D') %>
    </p>
  </div>
</div>
  
<div class="row">
  <div class="large-6 columns">
    <h3>Mailing Address</h3>
    <%= @contact.address1 %><br>
    <%= @contact.address2 %><br>
    <%= @contact.city %>, <%= @contact.state %> <%= @contact.zip_code %>
  </div>
  <div class="large-6 columns">
    <h3>Telephone</h3>
    <%= link_to @contact.phone, "tel:#{@contact.phone.gsub(/\W/,'')}" %>
  </div>
</div>
  
<div class="row">
  <div class="large-12 columns">
    <h3>Event Attendance</h3>
    <table>
      <thead>
        <tr>
          <th>Event</th>
          <th>Date</th>
          <th>Location</th>
          <th>Distance</th>
          <th>Attended?</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  
    <%= link_to 'Edit', edit_contact_path(@contact) %> |
    <%= link_to 'Back', contacts_path %>
  </div>
</div>
